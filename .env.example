# FitProFinder Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# COMETCHAT CONFIGURATION
# =============================================================================
# Get these from your CometChat dashboard
NEXT_PUBLIC_COMETCHAT_APP_ID=your-cometchat-app-id
NEXT_PUBLIC_COMETCHAT_REGION=your-cometchat-region
NEXT_PUBLIC_COMETCHAT_AUTH_KEY=your-cometchat-auth-key

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get these from your Stripe dashboard
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# ANALYTICS & OBSERVABILITY
# =============================================================================
# PostHog (optional - for analytics and error tracking)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Resend or similar email service (optional)
RESEND_API_KEY=your-resend-api-key
SYSTEM_FROM_EMAIL=noreply@fitprofinder.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Beta access controls
ENABLE_BETA_GATE=false
INVITE_CODE_REQUIRED=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
PORT=4321
