---
// Sample featured trainers data - in production this would come from an API
const featuredTrainers = [
  {
    id: 1,
    name: "Sarah Johnson",
    specialties: ["Personal Training", "Weight Loss"],
    location: "Los Angeles, CA",
    rating: 4.9,
    reviewCount: 124,
    hourlyRate: 85,
    image: "/api/placeholder/300/300",
    verified: true,
    experience: 8,
    bio: "Certified personal trainer specializing in weight loss and strength training."
  },
  {
    id: 2,
    name: "Mike Chen",
    specialties: ["Strength Training", "Sports Performance"],
    location: "San Francisco, CA",
    rating: 4.8,
    reviewCount: 89,
    hourlyRate: 95,
    image: "/api/placeholder/300/300",
    verified: true,
    experience: 6,
    bio: "Former college athlete helping clients reach peak performance."
  },
  {
    id: 3,
    name: "Emma Rodriguez",
    specialties: ["Yoga", "Mindfulness"],
    location: "Austin, TX",
    rating: 5.0,
    reviewCount: 156,
    hourlyRate: 70,
    image: "/api/placeholder/300/300",
    verified: true,
    experience: 10,
    bio: "RYT-500 certified yoga instructor with focus on holistic wellness."
  },
  {
    id: 4,
    name: "David Thompson",
    specialties: ["Nutrition Coaching", "Weight Loss"],
    location: "Miami, FL",
    rating: 4.7,
    reviewCount: 78,
    hourlyRate: 80,
    image: "/api/placeholder/300/300",
    verified: true,
    experience: 5,
    bio: "Registered dietitian helping clients achieve sustainable lifestyle changes."
  },
  {
    id: 5,
    name: "Lisa Park",
    specialties: ["Pilates", "Injury Recovery"],
    location: "Seattle, WA",
    rating: 4.9,
    reviewCount: 92,
    hourlyRate: 90,
    image: "/api/placeholder/300/300",
    verified: true,
    experience: 7,
    bio: "Licensed physical therapist and certified Pilates instructor."
  },
  {
    id: 6,
    name: "Carlos Martinez",
    specialties: ["HIIT", "Cardio Training"],
    location: "Denver, CO",
    rating: 4.8,
    reviewCount: 103,
    hourlyRate: 75,
    image: "/api/placeholder/300/300",
    verified: true,
    experience: 4,
    bio: "High-energy trainer specializing in HIIT and functional fitness."
  }
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {featuredTrainers.map((trainer) => (
    <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
      <!-- Trainer Image -->
      <div class="relative h-64 bg-gray-200">
        <img 
          src={`https://images.unsplash.com/photo-${1500000000000 + trainer.id * 1000}?w=400&h=300&fit=crop&crop=face`}
          alt={trainer.name}
          class="w-full h-full object-cover"
        />
        {trainer.verified && (
          <div class="absolute top-3 right-3">
            <span class="bg-blue-600 text-white text-xs font-semibold px-2 py-1 rounded-full flex items-center">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Verified
            </span>
          </div>
        )}
        <div class="absolute bottom-3 left-3">
          <span class="bg-black/70 text-white text-sm font-semibold px-3 py-1 rounded-full">
            ${trainer.hourlyRate}/session
          </span>
        </div>
      </div>

      <!-- Trainer Info -->
      <div class="p-6">
        <!-- Name and Rating -->
        <div class="flex justify-between items-start mb-2">
          <h3 class="text-xl font-semibold text-gray-900">{trainer.name}</h3>
          <div class="flex items-center">
            <div class="flex items-center">
              {Array.from({ length: 5 }, (_, i) => (
                <svg 
                  key={i}
                  class={`w-4 h-4 ${i < Math.floor(trainer.rating) ? 'text-yellow-400' : 'text-gray-300'}`}
                  fill="currentColor" 
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <span class="text-sm text-gray-600 ml-1">
              {trainer.rating} ({trainer.reviewCount})
            </span>
          </div>
        </div>

        <!-- Location -->
        <div class="flex items-center text-gray-600 mb-3">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="text-sm">{trainer.location}</span>
        </div>

        <!-- Specialties -->
        <div class="flex flex-wrap gap-2 mb-4">
          {trainer.specialties.slice(0, 2).map((specialty) => (
            <span key={specialty} class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
              {specialty}
            </span>
          ))}
          {trainer.specialties.length > 2 && (
            <span class="bg-gray-100 text-gray-600 text-xs font-medium px-2.5 py-0.5 rounded-full">
              +{trainer.specialties.length - 2} more
            </span>
          )}
        </div>

        <!-- Bio -->
        <p class="text-gray-600 text-sm mb-4 line-clamp-2">
          {trainer.bio}
        </p>

        <!-- Experience -->
        <div class="flex items-center text-sm text-gray-600 mb-4">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {trainer.experience} years experience
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-2">
          <a 
            href={`/trainers/${trainer.id}`}
            class="flex-1 bg-blue-600 text-white text-center py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors font-medium"
          >
            View Profile
          </a>
          <a 
            href={`/trainers/${trainer.id}/book`}
            class="flex-1 border border-blue-600 text-blue-600 text-center py-2 px-4 rounded-lg hover:bg-blue-50 transition-colors font-medium"
          >
            Book Now
          </a>
        </div>
      </div>
    </div>
  ))}
</div>

<!-- View All Button -->
<div class="text-center mt-12">
  <a 
    href="/search"
    class="inline-flex items-center bg-gray-900 text-white px-8 py-3 rounded-lg hover:bg-gray-800 transition-colors font-semibold"
  >
    View All Trainers
    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  </a>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 