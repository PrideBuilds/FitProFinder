---
// Popular cities data with high-quality city images
const popularCities = [
  {
    name: 'Los Angeles',
    state: 'CA',
    trainerCount: '200+',
    image: 'https://images.unsplash.com/photo-1544989164-fb5e5f0a388b?w=800&h=600&fit=crop',
    slug: 'los-angeles-ca'
  },
  {
    name: 'New York',
    state: 'NY', 
    trainerCount: '350+',
    image: 'https://images.unsplash.com/photo-1518837695005-2083093ee35b?w=800&h=600&fit=crop',
    slug: 'new-york-ny'
  },
  {
    name: 'San Francisco',
    state: 'CA',
    trainerCount: '180+',
    image: 'https://images.unsplash.com/photo-1449824913935-59a10b8d2000?w=800&h=600&fit=crop',
    slug: 'san-francisco-ca'
  },
  {
    name: 'Austin',
    state: 'TX',
    trainerCount: '120+',
    image: 'https://images.unsplash.com/photo-1531218150217-54595bc2b934?w=800&h=600&fit=crop',
    slug: 'austin-tx'
  },
  {
    name: 'Miami',
    state: 'FL',
    trainerCount: '140+',
    image: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=800&h=600&fit=crop',
    slug: 'miami-fl'
  },
  {
    name: 'Seattle',
    state: 'WA',
    trainerCount: '110+',
    image: 'https://images.unsplash.com/photo-1541643600914-78b084683601?w=800&h=600&fit=crop',
    slug: 'seattle-wa'
  }
];
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        Explore Popular Cities
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Find fitness professionals nearby, or explore trainers in cities around the country
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {popularCities.map((city) => (
        <a 
          href={`/search?city=${encodeURIComponent(city.name)}&state=${city.state}`}
          class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105"
        >
          <div class="aspect-w-16 aspect-h-12 relative">
            <img
              src={city.image}
              alt={`${city.name}, ${city.state}`}
              class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
            
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-2xl font-bold text-white mb-1">
                {city.name}
              </h3>
              <p class="text-gray-200 text-sm">
                {city.trainerCount} fitness professionals
              </p>
            </div>
            
            <!-- Hover overlay with explore button -->
            <div class="absolute inset-0 bg-blue-600/90 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
              <div class="text-center">
                <div class="bg-white rounded-full p-3 mb-3 mx-auto w-16 h-16 flex items-center justify-center">
                  <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </div>
                <span class="text-white font-semibold">
                  Explore {city.name}
                </span>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="/search" 
        class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors"
      >
        View All Cities
        <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section> 