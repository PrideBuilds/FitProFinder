---
// Search filters component
---

<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 space-y-6">
  <!-- Location Filter -->
  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Location</h3>
    <div class="space-y-3">
      <div class="relative">
        <input
          type="text"
          placeholder="City, State or ZIP"
          class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        />
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
      </div>
      
      <!-- Radius Slider -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Distance: <span class="text-blue-600">25 miles</span>
        </label>
        <input
          type="range"
          min="5"
          max="100"
          value="25"
          class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer slider"
        />
        <div class="flex justify-between text-xs text-gray-500 mt-1">
          <span>5 mi</span>
          <span>100+ mi</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Specialty Filter -->
  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Specialty</h3>
    <div class="space-y-2">
      {[
        'Personal Training',
        'Yoga',
        'Pilates',
        'Nutrition Coaching',
        'Strength Training',
        'Cardio Training',
        'Weight Loss',
        'Sports Performance',
        'Injury Recovery',
        'Mindfulness'
      ].map((specialty) => (
        <label key={specialty} class="flex items-center">
          <input
            type="checkbox"
            class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
          />
          <span class="ml-2 text-sm text-gray-700">{specialty}</span>
        </label>
      ))}
    </div>
  </div>

  <!-- Price Range -->
  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Price Range</h3>
    <div class="space-y-3">
      <div class="flex items-center gap-3">
        <div class="flex-1">
          <label class="block text-xs text-gray-600 mb-1">Min</label>
          <div class="relative">
            <span class="absolute left-3 top-2 text-gray-500">$</span>
            <input
              type="number"
              placeholder="0"
              class="w-full pl-7 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
        </div>
        <div class="flex-1">
          <label class="block text-xs text-gray-600 mb-1">Max</label>
          <div class="relative">
            <span class="absolute left-3 top-2 text-gray-500">$</span>
            <input
              type="number"
              placeholder="200"
              class="w-full pl-7 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
        </div>
      </div>
      
      <!-- Quick Price Options -->
      <div class="grid grid-cols-2 gap-2 text-xs">
        {[
          'Under $50',
          '$50 - $75',
          '$75 - $100',
          '$100+'
        ].map((range) => (
          <button key={range} class="px-3 py-2 border border-gray-300 rounded-md hover:bg-gray-50 text-gray-700">
            {range}
          </button>
        ))}
      </div>
    </div>
  </div>

  <!-- Rating Filter -->
  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Rating</h3>
    <div class="space-y-2">
      {[5, 4, 3, 2].map((rating) => (
        <label key={rating} class="flex items-center">
          <input
            type="radio"
            name="rating"
            class="h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500"
          />
          <div class="ml-2 flex items-center">
            <div class="flex">
              {Array.from({ length: 5 }, (_, i) => (
                <svg 
                  key={i}
                  class={`w-4 h-4 ${i < rating ? 'text-yellow-400' : 'text-gray-300'}`}
                  fill="currentColor" 
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <span class="ml-2 text-sm text-gray-700">& up</span>
          </div>
        </label>
      ))}
    </div>
  </div>

  <!-- Availability Filter -->
  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Availability</h3>
    <div class="space-y-3">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Date</label>
        <input
          type="date"
          class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        />
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Time</label>
        <div class="grid grid-cols-2 gap-2 text-xs">
          {[
            'Morning',
            'Afternoon',
            'Evening',
            'Weekend'
          ].map((time) => (
            <label key={time} class="flex items-center">
              <input
                type="checkbox"
                class="h-3 w-3 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
              />
              <span class="ml-1 text-gray-700">{time}</span>
            </label>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Additional Filters -->
  <div>
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Other</h3>
    <div class="space-y-2">
      {[
        'Verified Only',
        'Instant Booking',
        'Online Sessions',
        'In-Person Only',
        'New Trainers'
      ].map((filter) => (
        <label key={filter} class="flex items-center">
          <input
            type="checkbox"
            class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
          />
          <span class="ml-2 text-sm text-gray-700">{filter}</span>
        </label>
      ))}
    </div>
  </div>

  <!-- Apply/Clear Buttons -->
  <div class="border-t border-gray-200 pt-6 space-y-3">
    <button class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 font-medium">
      Apply Filters
    </button>
    <button class="w-full border border-gray-300 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-50 font-medium">
      Clear All
    </button>
  </div>
</div>

<style>
  .slider::-webkit-slider-thumb {
    appearance: none;
    height: 20px;
    width: 20px;
    border-radius: 50%;
    background: #3B82F6;
    cursor: pointer;
  }

  .slider::-moz-range-thumb {
    height: 20px;
    width: 20px;
    border-radius: 50%;
    background: #3B82F6;
    cursor: pointer;
    border: none;
  }
</style> 