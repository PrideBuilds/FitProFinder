---
const steps = [
  {
    step: 1,
    title: "Search & Discover",
    description: "Browse verified fitness professionals in your area. Filter by specialty, price, and availability to find the perfect match for your goals.",
    icon: "search",
    color: "blue"
  },
  {
    step: 2,
    title: "Book Your Session",
    description: "View trainer profiles, read reviews, and book sessions directly through our secure platform. Chat with trainers before your first session.",
    icon: "calendar",
    color: "green"
  },
  {
    step: 3,
    title: "Achieve Your Goals",
    description: "Train with certified professionals, track your progress, and achieve lasting results. Leave reviews to help others in the community.",
    icon: "trophy",
    color: "purple"
  }
];
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
  {steps.map((step, index) => (
    <div key={step.step} class="text-center relative">
      <!-- Step Number and Icon -->
      <div class="relative inline-flex items-center justify-center mb-6">
        <!-- Background Circle -->
        <div class={`w-20 h-20 rounded-full ${
          step.color === 'blue' ? 'bg-blue-100' :
          step.color === 'green' ? 'bg-green-100' :
          'bg-purple-100'
        } flex items-center justify-center relative`}>
          
          <!-- Step Number -->
          <div class={`absolute -top-2 -right-2 w-8 h-8 rounded-full ${
            step.color === 'blue' ? 'bg-blue-600' :
            step.color === 'green' ? 'bg-green-600' :
            'bg-purple-600'
          } text-white text-sm font-bold flex items-center justify-center`}>
            {step.step}
          </div>

          <!-- Icon -->
          {step.icon === 'search' && (
            <svg class={`w-8 h-8 ${
              step.color === 'blue' ? 'text-blue-600' :
              step.color === 'green' ? 'text-green-600' :
              'text-purple-600'
            }`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          )}
          
          {step.icon === 'calendar' && (
            <svg class={`w-8 h-8 ${
              step.color === 'blue' ? 'text-blue-600' :
              step.color === 'green' ? 'text-green-600' :
              'text-purple-600'
            }`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          )}
          
          {step.icon === 'trophy' && (
            <svg class={`w-8 h-8 ${
              step.color === 'blue' ? 'text-blue-600' :
              step.color === 'green' ? 'text-green-600' :
              'text-purple-600'
            }`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
          )}
        </div>

        <!-- Connecting Line (except for last step) -->
        {index < steps.length - 1 && (
          <div class="hidden md:block absolute top-10 left-full w-full h-0.5 bg-gray-200 transform translate-x-4 z-0">
            <div class="h-full bg-gradient-to-r from-gray-300 to-gray-200 rounded-full"></div>
          </div>
        )}
      </div>

      <!-- Content -->
      <div class="space-y-4">
        <h3 class="text-xl font-semibold text-gray-900">
          {step.title}
        </h3>
        <p class="text-gray-600 leading-relaxed">
          {step.description}
        </p>
      </div>
    </div>
  ))}
</div>

<!-- Additional Info Section -->
<div class="mt-16 bg-gray-50 rounded-2xl p-8 text-center">
  <h3 class="text-2xl font-semibold text-gray-900 mb-4">
    Ready to get started?
  </h3>
  <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">
    Join thousands of people who have transformed their fitness journey with FitProFinder. 
    Find your perfect trainer today.
  </p>
  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    <a 
      href="/search" 
      class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors font-semibold"
    >
      Find Trainers Near You
    </a>
    <a 
      href="/signup" 
      class="border border-gray-300 text-gray-700 px-8 py-3 rounded-lg hover:bg-gray-50 transition-colors font-semibold"
    >
      Create Free Account
    </a>
  </div>
</div> 