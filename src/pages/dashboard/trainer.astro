---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Trainer Dashboard - FitProFinder";
const description = "Manage your training business, clients, and schedule.";
---

<BaseLayout title={title} description={description}>
  <div class='min-h-screen bg-gray-50'>
    <!-- Header -->
    <div class='bg-white shadow-sm border-b'>
      <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
        <div class='flex justify-between items-center py-4'>
          <div class='flex items-center'>
            <h1 class='text-2xl font-bold text-gray-900'>Trainer Dashboard</h1>
          </div>
          <div class='flex items-center space-x-4'>
            <div id='userInfo' class='flex items-center space-x-3'>
              <img
                id='userAvatar'
                src=''
                alt='Profile'
                class='w-8 h-8 rounded-full'
              />
              <span id='userName' class='text-sm font-medium text-gray-700'
              ></span>
            </div>
            <button
              id='logoutBtn'
              class='bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors'
            >
              Logout
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8'>
      <!-- Welcome Section -->
      <div class='bg-white rounded-lg shadow-sm p-6 mb-8'>
