<script>
  // Import auth utilities
  const { authApi } = await import("../../utils/api.js");

  // Check authentication and load user data
  function checkAuth() {
    const userData = localStorage.getItem("fitpro_user");
    if (!userData) {
      window.location.href = "/auth/login";
      return null;
    }

    const user = JSON.parse(userData);
    if (!user.isAuthenticated || user.role !== "trainer") {
      window.location.href = "/auth/login";
      return null;
    }

    return user;
  }

  // Load user info into the page
  function loadUserInfo(user) {
    const userAvatar = document.getElementById("userAvatar");
    const userName = document.getElementById("userName");
    const welcomeName = document.getElementById("welcomeName");

    if (userAvatar)
      userAvatar.src =
        user.profileImageUrl ||
        "https://images.unsplash.com/photo-1594736797933-d0401ba2fe65?w=150&h=150&fit=crop&crop=face";
    if (userName) userName.textContent = `${user.firstName} ${user.lastName}`;
    if (welcomeName) welcomeName.textContent = user.firstName;
  }

  // Handle logout
  async function handleLogout() {
    try {
      await authApi.logout();
    } catch (error) {
      console.error("Logout error:", error);
    } finally {
      localStorage.removeItem("fitpro_user");
      window.location.href = "/auth/login";
    }
  }

  // Initialize dashboard
  function initDashboard() {
    const user = checkAuth();
    if (user) {
      loadUserInfo(user);
    }

    // Add logout event listener
    const logoutBtn = document.getElementById("logoutBtn");
    logoutBtn?.addEventListener("click", handleLogout);
  }

  // Initialize when page loads
  initDashboard();
</script>
