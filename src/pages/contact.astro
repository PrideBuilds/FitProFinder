---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Contact Us - FitProFinder";
const description =
  "Get in touch with the FitProFinder team. We're here to help with any questions about our platform, trainers, or services.";
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <div class='bg-gradient-to-r from-blue-600 to-purple-700 text-white py-16'>
    <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center'>
      <h1 class='text-4xl md:text-5xl font-bold mb-6'>Contact Us</h1>
      <p class='text-xl text-blue-100 max-w-3xl mx-auto'>
        Have questions? We're here to help. Reach out to our team anytime.
      </p>
    </div>
  </div>

  <!-- Contact Form Section -->
  <section class='py-20 bg-white'>
    <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
      <div class='grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16'>
        <!-- Contact Form -->
        <div class='order-2 lg:order-1 w-full'>
          <div class='bg-white p-6 lg:p-8 rounded-lg shadow-sm border'>
            <h2 class='text-3xl font-bold text-gray-900 mb-8'>
              Send us a message
            </h2>
            <form class='space-y-6'>
              <div class='grid grid-cols-1 sm:grid-cols-2 gap-6'>
                <div>
                  <label
                    for='firstName'
                    class='block text-sm font-medium text-gray-700 mb-2'
                  >
                    First Name *
                  </label>
                  <input
                    type='text'
                    id='firstName'
                    name='firstName'
                    required
                    class='w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors'
                    placeholder='John'
                  />
                </div>
                <div>
                  <label
                    for='lastName'
                    class='block text-sm font-medium text-gray-700 mb-2'
                  >
                    Last Name *
                  </label>
                  <input
                    type='text'
                    id='lastName'
                    name='lastName'
                    required
                    class='w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors'
                    placeholder='Doe'
                  />
                </div>
              </div>

              <div>
                <label
                  for='email'
                  class='block text-sm font-medium text-gray-700 mb-2'
                >
                  Email Address *
                </label>
                <input
                  type='email'
                  id='email'
                  name='email'
                  required
                  class='w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors'
                  placeholder='john@example.com'
                />
              </div>

              <div>
                <label
                  for='userType'
                  class='block text-sm font-medium text-gray-700 mb-2'
                >
                  I am a...
                </label>
                <select
                  id='userType'
                  name='userType'
                  class='w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white transition-colors'
                >
                  <option value=''>Please select</option>
                  <option value='client'>Client looking for a trainer</option>
                  <option value='trainer'>Fitness professional</option>
                  <option value='other'>Other</option>
                </select>
              </div>

              <div>
                <label
                  for='subject'
                  class='block text-sm font-medium text-gray-700 mb-2'
                >
                  Subject *
                </label>
                <input
                  type='text'
                  id='subject'
                  name='subject'
                  required
                  class='w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors'
                  placeholder='How can we help you?'
                />
              </div>

              <div>
                <label
                  for='message'
                  class='block text-sm font-medium text-gray-700 mb-2'
                >
                  Message *
                </label>
                <textarea
                  id='message'
                  name='message'
                  rows='6'
                  required
                  class='w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none transition-colors'
                  placeholder='Tell us more about your question or how we can help...'
                ></textarea>
              </div>

              <button
                type='submit'
                class='w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors shadow-lg'
              >
                Send Message
              </button>
            </form>
          </div>
        </div>

        <!-- Contact Information -->
        <div class='order-1 lg:order-2 w-full'>
          <div class='bg-gray-50 p-6 lg:p-8 rounded-lg h-full'>
            <h2 class='text-3xl font-bold text-gray-900 mb-8'>Get in touch</h2>

            <div class='space-y-8'>
              <!-- Support Hours -->
              <div class='flex items-start'>
                <div class='flex-shrink-0'>
                  <div class='bg-blue-100 rounded-lg p-3'>
                    <svg
                      class='w-6 h-6 text-blue-600'
                      fill='none'
                      stroke='currentColor'
                      viewBox='0 0 24 24'
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        stroke-width='2'
                        d='M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z'></path>
                    </svg>
                  </div>
                </div>
                <div class='ml-4'>
                  <h3 class='text-lg font-semibold text-gray-900 mb-2'>
                    Support Hours
                  </h3>
                  <div class='text-gray-600 space-y-1'>
                    <p>Monday - Friday: 6:00 AM - 10:00 PM (PST)</p>
                    <p>Saturday - Sunday: 8:00 AM - 8:00 PM (PST)</p>
                  </div>
                </div>
              </div>

              <!-- Email Support -->
              <div class='flex items-start'>
                <div class='flex-shrink-0'>
                  <div class='bg-blue-100 rounded-lg p-3'>
                    <svg
                      class='w-6 h-6 text-blue-600'
                      fill='none'
                      stroke='currentColor'
                      viewBox='0 0 24 24'
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        stroke-width='2'
                        d='M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
                      ></path>
                    </svg>
                  </div>
                </div>
                <div class='ml-4'>
                  <h3 class='text-lg font-semibold text-gray-900 mb-2'>
                    Email Support
                  </h3>
                  <p class='text-gray-600 mb-1'>
                    <a
                      href='mailto:support@fitprofinder.com'
                      class='text-blue-600 hover:text-blue-700 transition-colors'
                    >
                      support@fitprofinder.com
                    </a>
                  </p>
                  <p class='text-sm text-gray-500'>
                    We respond within 24 hours
                  </p>
                </div>
              </div>

              <!-- Phone Support -->
              <div class='flex items-start'>
                <div class='flex-shrink-0'>
                  <div class='bg-blue-100 rounded-lg p-3'>
                    <svg
                      class='w-6 h-6 text-blue-600'
                      fill='none'
                      stroke='currentColor'
                      viewBox='0 0 24 24'
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        stroke-width='2'
                        d='M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z'
                      ></path>
                    </svg>
                  </div>
                </div>
                <div class='ml-4'>
                  <h3 class='text-lg font-semibold text-gray-900 mb-2'>
                    Phone Support
                  </h3>
                  <p class='text-gray-600 mb-1'>
                    <a
                      href='tel:+1-555-FITPRO'
                      class='text-blue-600 hover:text-blue-700 transition-colors'
                    >
                      +1 (555) FIT-PRO
                    </a>
                  </p>
                  <p class='text-sm text-gray-500'>
                    Available during support hours
                  </p>
                </div>
              </div>

              <!-- Live Chat -->
              <div class='flex items-start'>
                <div class='flex-shrink-0'>
                  <div class='bg-blue-100 rounded-lg p-3'>
                    <svg
                      class='w-6 h-6 text-blue-600'
                      fill='none'
                      stroke='currentColor'
                      viewBox='0 0 24 24'
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        stroke-width='2'
                        d='M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z'
                      ></path>
                    </svg>
                  </div>
                </div>
                <div class='ml-4'>
                  <h3 class='text-lg font-semibold text-gray-900 mb-2'>
                    Live Chat
                  </h3>
                  <p class='text-gray-600 mb-1'>
                    Available on our website during support hours
                  </p>
                  <p class='text-sm text-gray-500'>
                    Instant answers to common questions
                  </p>
                </div>
              </div>
            </div>

            <!-- FAQ Link -->
            <div class='mt-12 p-6 bg-white rounded-lg border shadow-sm'>
              <h3 class='text-lg font-semibold text-gray-900 mb-3'>
                Frequently Asked Questions
              </h3>
              <p class='text-gray-600 mb-4'>
                Check out our FAQ section for quick answers to common questions
                about FitProFinder.
              </p>
              <a
                href='/help'
                class='inline-flex items-center text-blue-600 hover:text-blue-700 font-medium transition-colors'
              >
                View Help Center
                <svg
                  class='w-4 h-4 ml-1'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M9 5l7 7-7 7'></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class='py-20 bg-gray-50'>
    <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
      <div class='text-center mb-16'>
        <h2 class='text-3xl font-bold text-gray-900 mb-4'>
          Need Help With Something Specific?
        </h2>
        <p class='text-lg text-gray-600'>
          Quick links to common support topics
        </p>
      </div>

      <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
        <div
          class='bg-white rounded-lg p-8 shadow-sm border hover:shadow-lg transition-all duration-300'
        >
          <div class='text-blue-600 mb-6'>
            <svg
              class='w-10 h-10'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z'
              ></path>
            </svg>
          </div>
          <h3 class='text-xl font-semibold text-gray-900 mb-3'>
            Account Issues
          </h3>
          <p class='text-gray-600 mb-6 leading-relaxed'>
            Need help with your account, password, or profile settings?
          </p>
          <a
            href='/help#account-setup'
            class='inline-flex items-center text-blue-600 hover:text-blue-700 font-medium transition-colors'
          >
            Get Account Help
            <svg
              class='w-4 h-4 ml-1'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M9 5l7 7-7 7'></path>
            </svg>
          </a>
        </div>

        <div
          class='bg-white rounded-lg p-8 shadow-sm border hover:shadow-lg transition-all duration-300'
        >
          <div class='text-blue-600 mb-6'>
            <svg
              class='w-10 h-10'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'
              ></path>
            </svg>
          </div>
          <h3 class='text-xl font-semibold text-gray-900 mb-3'>
            Booking Support
          </h3>
          <p class='text-gray-600 mb-6 leading-relaxed'>
            Questions about scheduling, cancellations, or finding trainers?
          </p>
          <a
            href='/help#booking-process'
            class='inline-flex items-center text-blue-600 hover:text-blue-700 font-medium transition-colors'
          >
            Get Booking Help
            <svg
              class='w-4 h-4 ml-1'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M9 5l7 7-7 7'></path>
            </svg>
          </a>
        </div>

        <div
          class='bg-white rounded-lg p-8 shadow-sm border hover:shadow-lg transition-all duration-300'
        >
          <div class='text-blue-600 mb-6'>
            <svg
              class='w-10 h-10'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z'
              ></path>
            </svg>
          </div>
          <h3 class='text-xl font-semibold text-gray-900 mb-3'>Payment Help</h3>
          <p class='text-gray-600 mb-6 leading-relaxed'>
            Issues with payments, billing, or refunds?
          </p>
          <a
            href='/help#payment-methods'
            class='inline-flex items-center text-blue-600 hover:text-blue-700 font-medium transition-colors'
          >
            Get Payment Help
            <svg
              class='w-4 h-4 ml-1'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M9 5l7 7-7 7'></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Stats -->
  <section class='py-16 bg-white'>
    <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
      <div class='grid grid-cols-2 md:grid-cols-4 gap-8 text-center'>
        <div>
          <div class='text-3xl font-bold text-blue-600 mb-2'>&lt; 2 hrs</div>
          <div class='text-gray-600'>Average Response Time</div>
        </div>
        <div>
          <div class='text-3xl font-bold text-blue-600 mb-2'>24/7</div>
          <div class='text-gray-600'>Support Available</div>
        </div>
        <div>
          <div class='text-3xl font-bold text-blue-600 mb-2'>98%</div>
          <div class='text-gray-600'>Customer Satisfaction</div>
        </div>
        <div>
          <div class='text-3xl font-bold text-blue-600 mb-2'>5 min</div>
          <div class='text-gray-600'>Average Chat Wait</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Handle contact form submission
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.querySelector("form");
    if (form) {
      form.addEventListener("submit", (e) => {
        e.preventDefault();

        // Here you would normally send the form data to your backend
        // For now, we'll just show a success message
        alert(
          "Thank you for your message! We'll get back to you within 24 hours."
        );
        form.reset();
      });
    }
  });
</script>
