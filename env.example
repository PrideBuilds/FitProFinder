# FitProFinder Environment Configuration
# Copy this file to .env.local and update with your actual values

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================
PUBLIC_API_BASE_URL=http://localhost:3000/api
API_PORT=3000
API_HOST=localhost
CORS_ORIGIN=http://localhost:4321

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/fitprofinder

# Individual database settings (for development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fitprofinder
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# COMETCHAT CONFIGURATION
# =============================================================================
# Get these from your CometChat dashboard
PUBLIC_COMETCHAT_APP_ID=your_app_id_here
PUBLIC_COMETCHAT_REGION=us
PUBLIC_COMETCHAT_AUTH_KEY=your_auth_key_here

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get these from your Stripe dashboard
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate strong secrets for production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@fitprofinder.com

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DIR=uploads

# =============================================================================
# REDIS CONFIGURATION (for caching)
# =============================================================================
# Redis URL (for production)
REDIS_URL=redis://localhost:6379

# Individual Redis settings (for development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=pretty

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_MESSAGING=true
ENABLE_PAYMENTS=true
ENABLE_REVIEWS=true
ENABLE_ONLINE_SESSIONS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_DARK_MODE=true
ENABLE_MULTI_LANGUAGE=false

# =============================================================================
# SECURITY
# =============================================================================
# Generate strong secrets for production
SESSION_SECRET=your-super-secret-session-key-change-in-production
BCRYPT_ROUNDS=12

# =============================================================================
# MONITORING
# =============================================================================
ENABLE_METRICS=false
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT
# =============================================================================
ENABLE_DEBUG=false
ENABLE_SWAGGER=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and update these for production deployment

# NODE_ENV=production
# PUBLIC_API_BASE_URL=https://api.fitprofinder.com
# CORS_ORIGIN=https://fitprofinder.com
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
# REDIS_URL=redis://user:pass@host:6379
# JWT_SECRET=your-production-jwt-secret-here
# SESSION_SECRET=your-production-session-secret-here
# LOG_LEVEL=warn
# LOG_FORMAT=json
# ENABLE_DEBUG=false
# ENABLE_SWAGGER=false
# ENABLE_METRICS=true
